import Main from "../layouts/main.astro";
import Project from "../components/project.astro";
---

<Main>
  <section class="max-w-[60rem] w-full px-6 max-sm:mt-[5vh] mt-[10vh]">
    <div class="flex justify-between items-center mb-[2rem]">
      <div>
        <h1 class="font-semibold text-3xl sm:text-4xl md:text-6xl mb-4">
          Projects
        </h1>
        <p class="text-md sm:text-lg text-pretty">
          Here are some of my recent projects:
        </p>
      </div>
    </div>
    <div
      class="flex flex-wrap max-sm:items-center justify-between max-sm:gap-[2rem] gap-[2rem] mb-[5rem]"
    >
      <Project
        tools="HTML, CSS, JS, Figma, UI/UX Design, Flex, Grid"
        websiteLink="https://guldereneriste.netlify.app"
        githubLink="https://github.com/shtanriverdi/Landing-Page-Eriste"
        src="/public/images/eriste.jpg"
        title="Landing Page"
        description="I designed this responsive landing page in Figma for my familyâ€™s handmade product business. The goal was to create a clean, simple, and user-friendly design. With a mobile-first approach, clear sections, and engaging visuals, this design ensures a seamless experience across all devices."
